<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800" FontSize="30">
  <StackPanel>
    <Button Content="Hallo Welt" FontSize="10"/>
    <Button Margin="10">
      <Button.LayoutTransform>
        <TransformGroup>
          <RotateTransform Angle="30"/>
          <ScaleTransform ScaleX="2" ScaleY="2"/>
        </TransformGroup>
      </Button.LayoutTransform>
      <StackPanel Orientation="Horizontal" >
        <Ellipse Width="50" Height="50" Fill="Yellow" Margin="5 10 20 40"/>
        <TextBlock Text="Hallo Welt" VerticalAlignment="Center"/>
        <Ellipse Width="50" Height="50"  Margin="5">
          <Ellipse.Fill>
            <!--<SolidColorBrush Color="Red"/>-->
            <!--<RadialGradientBrush >
              <GradientStop Color="Blue" Offset="0"/>
              <GradientStop Color="LightCyan" Offset="1"/>
            </RadialGradientBrush>-->
            <ImageBrush ImageSource="koala.jpg"/>
          </Ellipse.Fill>
        </Ellipse>

      </StackPanel>
    </Button>

    <Button Content="sososo"/>
  </StackPanel>
</Window>
