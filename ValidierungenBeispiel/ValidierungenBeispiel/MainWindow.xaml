<Window x:Class="ValidierungenBeispiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValidierungenBeispiel"
        mc:Ignorable="d" FontSize="25"
        Title="MainWindow" Height="450" Width="800">
  <Window.DataContext>
    <local:ViewModel/>
  </Window.DataContext>
  <StackPanel>
    <TextBox Margin="5" Style="{StaticResource ControlErrorTemplate}" Text="{Binding GeradeZahl1, ValidatesOnExceptions=True}" />
    <TextBox Margin="5" Style="{StaticResource ControlErrorTemplate}" Text="{Binding GeradeZahl2, ValidatesOnDataErrors=True}" />
    <TextBox Margin="5" Style="{StaticResource ControlErrorTemplate}" >
      <TextBox.Text>
        <Binding Path="GeradeZahl2">
          <Binding.ValidationRules>
            <local:GeradeZahlValidationRule/>
          </Binding.ValidationRules>
        </Binding>
      </TextBox.Text>
    </TextBox>
  </StackPanel>
</Window>
