<Window x:Class="Datenbindung1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Datenbindung1"
        mc:Ignorable="d" 
        Title="MainWindow" Height="450" Width="800">
  <Window.Resources>
    <local:SchriftgrößeConverter x:Key="SGC" Offset="50" Faktor="7"/>
    <local:SmileyConverter x:Key="SC"/>
    <local:DummyConverter x:Key="DC"/>
  </Window.Resources>
  <StackPanel>
    <Slider Name="SL" Margin="5"/>
    <TextBlock Margin="5" FontSize="100" Text="{Binding ElementName=SL, Path=Value, Converter={StaticResource SC}}"/>
    <TextBox Margin="5" Text="{Binding ElementName=SL, Path=Value, StringFormat=0.0}"
             FontSize="{Binding ElementName=SL, Path=Value, Converter={StaticResource SGC}}"/>
    <Label Margin="5" Content="{Binding ElementName=SL, Path=Value, StringFormat=0.0, Converter={StaticResource DC}, ConverterParameter=blubbi}"/>
    <TextBox Margin="5" Text="{Binding Value, ElementName=SL}"/>
  </StackPanel>
</Window>
